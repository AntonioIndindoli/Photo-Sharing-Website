<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="/public/css/form.css">
    <title>Document</title>
    <script defer src="/public/js/validate.js"></script>
    <script defer src="/public/js/frontendjs.js"></script>
</head>
<body>

    {{> header}}
    {{#if (emptyObject messages)}}
    {{> flashmessage}}
    {{/if}}
    {{{body}}}
    {{> footer}}

    {{#if logged}}
        <script>
            let ele = document.getElementById('logout-button');
            if(ele){
                ele.onclick = (even) => {
                    fetch('/users/logout', {
                        method:"POST"
                    })
                    .then((data) => {
                        location.replace('/');
                    })
                }
            }
        </script>
    {{/if}}
    
</body>

</html>